<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ACEDC7"
    android:gravity="center"
    android:weightSum="8">

    <LinearLayout
        android:layout_weight="3.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background3_shape"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="#ffe"
            android:textIsSelectable="true"
            android:textSize="20sp"
            android:text="@string/btn_txt6"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="7"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/signUpPage_name_id"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background1_shape"
            android:textColor="#ffe"
            android:inputType="text"
            android:textColorHint="#ffe"
            android:hint="@string/btn_txt9"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="17sp"
            android:textStyle="normal"
            />

        <EditText
            android:id="@+id/signUpPage_userName_id"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background1_shape"
            android:textColor="#ffe"
            android:textColorHint="#ffe"
            android:inputType="text"
            android:hint="@string/btn_txt10"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="17sp"
            android:textStyle="normal"
            />

        <EditText
            
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background1_shape"
            android:textColor="#ffe"
            android:textColorHint="#ffe"
            android:hint="@string/btn_txt11"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="17sp"
            android:textStyle="normal"
            />

        <EditText
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background1_shape"
            android:textColor="#ffe"
            android:textColorHint="#ffe"
            android:hint="@string/btn_txt12"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="17sp"
            android:textStyle="normal"
            />

        <EditText
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background1_shape"
            android:textColor="#ffe"
            android:textColorHint="#ffe"
            android:hint="@string/btn_txt13"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="17sp"
            android:textStyle="normal"
            />

        <EditText
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background1_shape"
            android:textColor="#ffe"
            android:textColorHint="#ffe"
            android:hint="@string/btn_txt14"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="17sp"
            android:textStyle="normal"
            />

        <EditText
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background1_shape"
            android:textColor="#ffe"
            android:textColorHint="#ffe"
            android:hint="@string/btn_txt15"
            android:textAlignment="center"
            android:textIsSelectable="true"
            android:textSize="17sp"
            android:textStyle="normal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="3.5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:weightSum="2">

        <Button
            android:id="@+id/signUp_cancel_btn"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background4_shape"
            android:textSize="15sp"
            android:textColor="#ffe"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:text="@string/btn_txt7"
            />

        <Button
            android:id="@+id/signUp_done_btn"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background4_shape"
            android:textSize="15sp"
            android:textColor="#ffe"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:text="@string/btn_txt8"
            />


    </LinearLayout>

</LinearLayout>